{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@handlers/*": ["handlers/*"],
      "@images/*": ["assets/images/*"],
      "@asset-models/*": ["assets/models/*"],
      "@enums/*": ["models/enums/*"],
      "@models/*": ["models/view-models/*"],
      "@interfaces/*": ["interfaces/*"],
      "@bootstrap/*": ["bootstrap/*"]
    },
    "strict": true,
    "skipLibCheck": true
  }
}